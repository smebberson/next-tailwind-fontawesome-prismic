; editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# Because the `npm` cli resets it when you use `--save` or `--save-dev`.
[{.slicemachine/**/*,customtypes/*/index.json,package.json,slices/*/model.json}]
indent_size = 2
